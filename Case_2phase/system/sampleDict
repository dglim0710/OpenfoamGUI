FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleSurfaceDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

surfaceFormat     raw;

writeFormat     raw;

setFormat raw;

fields
(
    h
);


sets
(
    thickness
    {
        type            uniform;
        axis            xyz;
        start           (0. 0.15 0.);
        end             (0. -0.15 0.);
        nPoints         100;
    }
);

surfaces
(
    bottom
    {
        type patch;
        patchName bottom;
        interpolate true;
    }
);


